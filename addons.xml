<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.mvs-nl" version="1.0.0" name="MovieStreamer repository" provider-name="moviestreamer.nl">

	<extension point="xbmc.addon.repository" name="Moviestreamer Repository">
		<info compressed="false">https://raw.githubusercontent.com/chevy1/repo.mvs/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/chevy1/repo.mvs/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/chevy1/repo.mvs/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Moviestreamer</summary>
		<description lang="en">Moviestreamer repo for automatic updates</description>
		<platform>all</platform>
	</extension>
</addon>

	<addon id="script.moviestreamer.nl" name="MovieStreamer.nl Instellingen" version="1.0.29" provider-name="moviestreamer.nl">
	<requires>
		<import addon="xbmc.python" version="2.13.0"/>
		<import addon="xbmc.addon" version="12.0.0"/>
	</requires>

	<extension point="xbmc.service" start="login" 	library="service.py"/>
	<extension point="xbmc.python.library"          library="default.py" />
	<extension point="xbmc.python.pluginsource"     library="default.py" />
    <extension point="xbmc.python.script"           library="default.py">
        <provides>executable</provides>
    </extension>



	<extension point="xbmc.addon.metadata">
		<language></language>
		<platform>all</platform>
		<license>GPL v2.0</license>
		<forum></forum>
		<website></website>
		<source></source>
	</extension>
</addon>
</addons>
